<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO LIST</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <br />
    <br />
    <div class="container">
      <div class="row">
        <h1>TODO UPDATE</h1>
        <p>
            <a class="btn btn-sm btn-secondary" href="/view">List Todos</a>
        </p>
        <form action="" method="POST">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td>Priority</td>
                        <td>
                            <select class="form-select" name="priority">
                            <% for (let key in priority) { %>
                                <option value="<%= key %>" <%= (todo.priority==key ? 'selected' : '') %> ><%= priority[key] %></option>
                            <% } %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Title</td>
                        <td><input type="text" name="title" required class="form-control" value="<%= todo.title %>"></td>
                    </tr>
                    <tr>
                        <td>Description</td>
                        <td>
                            <textarea name="description" class="form-control"><%= todo.description %></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td>Is Done?</td>
                        <td>
                            <select class="form-select" name="isDone">
                                <option value="1" <%= (todo.isDone ? 'selected' : '') %> >Yes</option>
                                <option value="0" <%= (todo.isDone ? '' : 'selected') %> >No</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Created</td>
                        <td><%= todo.createdAt.toUTCString() %></td>
                    </tr>
                </tbody>
            </table>
            <p>
                <button class="btn btn-primary" type="submit">UPDATE</button>
            </p>
        </form>
      </div>
    </div>
  </body>
</html>
